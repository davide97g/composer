{
  "name": "@composer/electron",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && tsc -p tsconfig.preload.json && tsc --watch & electron .",
    "build": "tsc && tsc -p tsconfig.preload.json",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "dist": "pnpm build && electron-builder"
  },
  "dependencies": {
    "@composer/agent": "workspace:*",
    "@composer/web": "workspace:*",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.composer.app",
    "productName": "Composer",
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null
    },
    "asarUnpack": [
      "node_modules/@composer/agent/**",
      "node_modules/@composer/shared/**",
      "node_modules/cors/**",
      "node_modules/dotenv/**",
      "node_modules/express/**",
      "node_modules/openai/**",
      "node_modules/playwright/**"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!**/.sessions/**",
      "!**/node_modules/@composer/agent/.sessions/**"
    ],
    "extraResources": [
      {
        "from": "../../apps/agent/dist",
        "to": "agent/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../apps/agent/package.json",
        "to": "agent/package.json"
      },
      {
        "from": "../../apps/web/dist",
        "to": "web/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
